<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/orange_bg"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:id="@+id/container_main"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_main"
                android:layout_gravity="top|center"
                android:layout_marginTop="-10dp"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:orientation="vertical"
                android:src="@drawable/icon_main1"
                android:paddingLeft="@dimen/icon_horizontal_margin"
                android:paddingRight="@dimen/icon_horizontal_margin"


                > </ImageView>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_pic"
                android:id="@+id/btn_pic"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/btn_round_rect" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_blank"
                android:id="@+id/btn_blank"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_round_rect"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_about"
                android:layout_gravity="center"
                android:text="@string/btn_about"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/btn_round_rect"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_update"
                android:layout_gravity="center"
                android:text="@string/btn_update"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_round_rect"
                />
        </LinearLayout>


    </LinearLayout>

