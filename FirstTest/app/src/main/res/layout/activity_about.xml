<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="test.AnDraw.AboutActivity"
    android:background="@color/orange_bg">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/icon2"></LinearLayout>
        <TextView android:text="@string/string_about" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_text"
            android:textSize="28dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView android:text="@string/string_info_about" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_text"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_contact_about"
                android:id="@+id/btn_contact"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_round_rect"
                android:layout_marginRight="20dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_back_about"
                android:id="@+id/btn_return"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_round_rect"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
